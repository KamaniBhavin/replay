{
  "manifest_version": 3,
  "name": "Replay",
  "author": "Bhavin Kamani",
  "version": "0.0.1",
  "description": "Replay is a browser extension that lets you search your web browsing history. It's like Spotlight for your browser.",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png",
    "196": "icons/icon-196.png",
    "256": "icons/icon-256.png"
  },
  "action": {
    "default_title": "Ghost Reader",
    "default_popup": "popup.html",
    "icons": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "64": "icons/icon-64.png",
      "128": "icons/icon-128.png",
      "196": "icons/icon-196.png",
      "256": "icons/icon-256.png"
    }
  },
  "permissions": ["storage", "tabs", "activeTab", "scripting"],
  "commands": {
    "spotlight": {
      "suggested_key": {
        "default": "Ctrl+Space",
        "mac": "MacCtrl+Space"
      },
      "description": "Spotlight"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["spotlight.js", "extractor.js"]
    }
  ]
}
